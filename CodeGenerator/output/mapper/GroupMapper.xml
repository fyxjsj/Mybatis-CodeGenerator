<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yxfang.lirun.dao.GroupDao">
	<!--插入-->
	<insert id="insert" parameterType="com.yxfang.lirun.bean.Group">
		INSERT INTO Group(
		GROUPNAME,
		INTRO
		)
		VALUES (
		#{groupname},
		#{intro}
		)
	</insert>
	
	<!--更新-->
	<update id="update" parameterType="com.yxfang.lirun.bean.Group">
		UPDATE Group
		<set>
			<if test="groupname!=null">
				 GROUPNAME=#{groupname},
			</if>
			<if test="intro!=null">
				 INTRO=#{intro}
			</if>
		</set>
		WHERE ID =#{id}
	</update>

	<!-- 删除信息 -->
	<delete id="delete" parameterType="integer">
		DELETE FROM Group WHERE
		ID = #{id}
	</delete>

	<!-- 查询字段 -->
	<sql id="selectFieldSQL">
		SELECT 
			ID id,
			GROUPNAME groupname,
			INTRO intro,
			CREATETIME createtime
	</sql>

	<select id="getById" parameterType="integer"
		resultType="com.yxfang.lirun.bean.Group">
		SELECT * FROM Group WHERE
		ID = #{id}
	</select>

	<!-- 查询 -->
	<select id="find" parameterType="Group"
		resultType="com.yxfang.lirun.bean.Group">
		<include refid="selectFieldSQL" />
		FROM
		Group
		<where>
			1=1
			<if test="groupname!=null">
			  AND GROUPNAME=#{groupname},
			</if>
			<if test="intro!=null">
			  AND INTRO=#{intro}
			</if>
		</where>
	</select>

	<!-- 分页查询（条件） -->
	<sql id="page_condition">
		<where>
			1=1
			<if test="groupname!=null">
			  AND GROUPNAME=#{groupname},
			</if>
			<if test="intro!=null">
			  AND INTRO=#{intro}
			</if>
		</where>
	</sql>

	<!-- 查询字段 -->
	<sql id="pageFieldSQL">
		limit #{startIndex},#{pageSize}
	</sql>

	<!-- 分页计数 -->
	<select id="pageList" parameterType="map"
		resultType="com.yxfang.lirun.bean.Group">
		<include refid="selectFieldSQL" />
		FROM
		Group
		<include refid="page_condition" />
		<include refid="pageFieldSQL" />
	</select>

	<!-- 分页计数 -->
	<select id="pageCount" parameterType="map" resultType="int">
		SELECT count(*)
		  FROM Group
		<include refid="page_condition" />
	</select>
</mapper>
